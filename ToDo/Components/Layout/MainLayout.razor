@inherits LayoutComponentBase



<div class="page">
    <div class="@state">
        <NavMenu></NavMenu>
    </div>

    <main>
        <div class="top-row">
          <button class="btn btn-primary" @onclick="() => ToggleSidebar()">Toggle Sidebar button</button>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code
{
    private string state = "sidebar";

    public void ToggleSidebar()
    {
        if(state == "sidebar")
        {
            state = "sclosed";
        }
        else
        {
            state = "sidebar";
        }
        
    }

}
